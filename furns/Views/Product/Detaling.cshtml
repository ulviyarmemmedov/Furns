@using furns.viewmodel;

@section css{
    <link rel="stylesheet" href="~/Front/css/detaling.css" />
}
@model ProductDetailVm
<div class="one">
    <div class="container">
        <div class="row all">
            <div class="col-md-6 left"><h2>Detail Product</h2></div>
            <div class="col-md-6 right">
                <a href="@Url.Action("Index","home")">HOME</a>  /
                <a href="@Url.Action("shop","product")">SHOP</a>/
                Shop Detail
            </div>
        </div>
    </div>
</div>

<div class="middlee">
    <div class="container">
        <div class="row all">
            <div class="col-md-6 right">
                <img src="@Model.SingleProduct.ProductPicture[0].Picture.PictureUrl" alt="">
            </div>
            <div class="col-md-6 left">
                <h2>@Model.SingleProduct.Name</h2>
                @if(Model.SingleProduct.Discount>0)
                {
                   <p> @(@Model.SingleProduct.Price - ((@Model.SingleProduct.Price / 100) * @Model.SingleProduct.Discount)) $</p>
                }
                else
                {
                     <h3>$@Model.SingleProduct.Price $</h3>
                }
                <p>@Model.SingleProduct.Description</p>
                <a href="" nese="@Model.SingleProduct.Id" class="cart">Add TO Cart</a>
                <div class="line"></div>
                <ul>
                    <li>Security Policy (Edit With Customer Reassurance Module)</li>
                    <li>Delivery Policy (Edit With Customer Reassurance Module)</li>
                    <li>Return Policy (Edit With Customer Reassurance Module)</li>
                </ul>
            </div>
        </div>
    </div>
</div>


<div class="accordion">

    <div class="container">
        <div class="row all">
            <div class="col-md-12 top">
                <div class="tab">
                    <button class="tablinks" onclick="openCity(event, 'London')">Description</button>
                    <button class="tablinks" onclick="openCity(event, 'Paris')">Product Details</button>
                    <button class="tablinks" onclick="openCity(event, 'Tokyo')"> Reviews (2)</button>
                </div>
            </div>
            <div class="col-md-12 bottom">
                <!-- Tab content -->
                <div id="London" class="tabcontent">

                    <p>@Model.SingleProduct.Description</p>
                </div>

                <div id="Paris" class="tabcontent">

                    <ul style="list-style-type: none
   ;">
                        <li>Weight           400 g</li>
                        <li>Dimensions           10 x 10 x 15 cm</li>
                        <li>Materials          60% cotton, 40% polyester</li>
                        <li>Other Info              American heirloom jean shorts pug seitan letterpress</li>

                    </ul>
                </div>

                <div id="Tokyo" class="tabcontent">

                    <p>Lorem ipsum dolor sit, amet consectetur adipisicing elit. Esse, natus.</p>
                </div>

            </div>
        </div>
    </div>
</div>









@if (Model.SameCategory != null && Model.SameCategory.Count > 0)
{
    <div class="second-slider">
        <div class="container">
            <h1>Same Category Product</h1>
            <div class="slider">
                @foreach (var item in Model.SameCategory)
                {
                    <div class="col-md-4 col-sm-6 col-6 content ">
                        <div class="top">
                            @if (@item.ProductPicture[0].Picture.PictureUrl.Count() > 1)
                            {
                                <img src="@item.ProductPicture[0].Picture.PictureUrl" alt="" class="img1">
                                <img src="@item.ProductPicture[1].Picture.PictureUrl" alt="" class="img2">
                            }
                            else
                            {
                                <img src="@item.ProductPicture[0].Picture.PictureUrl" alt="" class="img1">

                            }
                            @if (item.IsFeatured)
                            {
                                <span>New</span>
                            }
                            @if (item.Discount > 0)
                            {
                                <p>@item.Discount</p>
                            }

                            <a href="" class="heart"><i class="fa-regular fa-heart"></i></a>
                            <a href="@Url.Action("Detaling","Product",new {id=item.Id})" class="rl1"><i class="fa-solid fa-arrow-right"></i></a>
                            <a href="" class="rl2"><i class="fa-solid fa-arrows-rotate"></i></a>
                            <a href="" class="cart">Add To Cart</a>
                        </div>
                        <div class="botton">
                            <span>
                                @item.Name
                            </span>
                            <div class="price">
                                @if (item.Discount > 0)
                                {
                                    <p>@(@item.Price - ((@item.Price / 100) * @item.Discount))</p>
                                    <p class="p">$@item.Price</p>
                                }
                                else
                                {
                                    <p>@item.Price</p>
                                }
                            </div>
                        </div>
                    </div>
                }

            </div>

        </div>
    </div>
}

